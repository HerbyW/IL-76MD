<!-- Gear indicators
3D instrument for Tu-154 -->
<PropertyList>
 <path>ind_14.ac</path>
 
<animation>
    <type>material</type>
     <object-name>base</object-name>    
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>

<effect>
 <inherits-from>Effects/model-transparent</inherits-from>
  <object-name>base</object-name>
</effect>

<!--Indicators-->
<animation>
  <type>material</type>
  <object-name>gl_1</object-name>
  <object-name>gl_2</object-name>
  <object-name>gl_3</object-name>
  <condition>
      <greater-than>
	<property>controls/switches/gauge-light</property>
	<value>0</value>
      </greater-than>
  </condition>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>controls/gear/gear-down</factor-prop>
  </emission>
</animation>

<animation>
  <type>material</type>
  <object-name>rl_1</object-name>
  <object-name>rl_2</object-name>
  <object-name>rl_3</object-name>
  <condition>
      <greater-than>
	<property>controls/switches/gauge-light</property>
	<value>0</value>
      </greater-than>
  </condition>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>gear/state</factor-prop>
  </emission>
</animation>

<animation>
  <type>material</type>
  <object-name>go_gear</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>gear/warning</factor-prop>
  </emission>
</animation>


</PropertyList>
