<PropertyList>

<path>var-75.ac</path>

<!-- Internal instruments lighting -->

 <animation>
    <object-name>base</object-name>    
    <object-name>needle</object-name>    
  </animation>

  <animation>
    <type>material</type>
    <object-name>base</object-name>    
    <object-name>needle</object-name>
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>

<!--Needles-->
<animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
    <interpolation>
  	<entry><ind>	14271.65</ind>	<dep>	177.0</dep></entry>
	<entry><ind>	9842.5</ind>	<dep>	142.0</dep></entry>
	<entry><ind>	4921.25</ind>	<dep>	83.0</dep></entry>
	<entry><ind>	2460.625</ind>	<dep>	44.0</dep></entry>
	<entry><ind>	0.0</ind>	<dep>	0.0</dep></entry>
        <entry><ind>	-2460.625</ind>	<dep>	-44.0</dep></entry>
        <entry><ind>	-4921.25</ind>	<dep>	-83.0</dep></entry>
        <entry><ind>	-9842.5</ind>	<dep>	-142.0</dep></entry>
        <entry><ind>	-14271.65</ind>	<dep>	-177.0</dep></entry>
    </interpolation>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>



</PropertyList>
