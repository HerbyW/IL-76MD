<PropertyList>
 <path>flaps_ind.ac</path>

 

  <!-- working for Rembrandt -->

  <animation>
    <type>material</type>
     <object-name>block1</object-name>
     <object-name>block2</object-name>
     <object-name>block3</object-name>
     <object-name>block4</object-name>     
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>

  <animation>
   <type>material</type>
   <object-name>flaps_ind</object-name>
   <emission>
		<red>   0.15</red>
		<green> 0.15</green>
		<blue>  0.15</blue>
		<factor-prop>controls/switches/gauge-light</factor-prop>
	</emission>
   </animation>

   <animation>
    <type>material</type>
     <object-name>flaps2</object-name>
       <emission>
		<red>   0.35 </red>
                <green> 0.35 </green>
                <blue>  0.35 </blue>
		<factor-prop>controls/switches/gauge-light</factor-prop>
       </emission>
    </animation>


