<PropertyList>

<path>uvpd.ac</path>


<!-- Internal instruments lighting -->

<animation> 
   <object-name>housing</object-name>
   <object-name>needle_1</object-name>
   <object-name>needle_2</object-name> 
</animation>

  <!-- working for Rembrandt -->
 
  <animation>
    <type>material</type>
     <object-name>housing</object-name>
   <object-name>needle_1</object-name>
   <object-name>needle_2</object-name> 
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>




<!--Needles-->

<animation>
    <type>rotate</type>
    <object-name>needle_1</object-name>
    <property>position/altitude-ft</property>
    <factor>0.36</factor>
    <interpolation>
  	<entry><ind>    -200</ind>	<dep>       5</dep></entry>
	<entry><ind>	   0</ind>	<dep>	    0</dep></entry>
	<entry><ind>	8000</ind>	<dep>	-90</dep></entry>
	<entry><ind>	25000</ind>	<dep>	-90.0</dep></entry>
    </interpolation>
    <axis>
      <x>1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
    <type>rotate</type>
    <object-name>needle_2</object-name>
    <property>controls/pressurization/diffdruck</property>
    <factor>1.0</factor>    
    <interpolation>
  	<entry><ind>	-0.04</ind>	<dep>	-40</dep></entry>
	<entry><ind>	0.0</ind>	<dep>	0.0</dep></entry>
        <entry><ind>	0.48</ind>	<dep>	5.4</dep></entry>        
	<entry><ind>	3.6</ind>	<dep>	118.9</dep></entry>
    </interpolation>
    <axis>
      <x>1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

</PropertyList>
