<!-- indicators on captain panel
3D instrument for Tu-154 -->
<PropertyList>
 <path>warning26.ac</path>
 
  <!-- Internal instruments lighting -->

  <effect>
 <inherits-from>Effects/model-transparent</inherits-from>
  <object-name>cover</object-name>
</effect>
  
  <animation>
    <type>material</type>
    <object-name>cover</object-name>    
    
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>
   
<!--Indicators 26-fuel 31-speed-->
<animation>
  <type>material</type>
  <object-name>text</object-name>
    <condition>
     <less-than>
	<property>consumables/fuel/total-fuel-gals</property>
	<value>660</value>
     </less-than>
    </condition>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>    
  </emission>
</animation>

</PropertyList>