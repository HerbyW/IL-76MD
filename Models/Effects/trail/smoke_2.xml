<PropertyList>
	<particlesystem>
		<name>engine-smoke</name>
		
		<texture>smoke.png</texture>
		
		<condition>
		  <greater-than>
		    <property>sim/multiplay/generic/float[8]</property>
		    <value>27</value>
		  </greater-than>
		</condition>
		
		<emissive>false</emissive>
		<lighting>false</lighting>
		<align>billboard</align>
		<attach>world</attach>
		<placer>
			<type>point</type>
		</placer>
		<shooter>
			<theta-min-deg>-1</theta-min-deg>
			<theta-max-deg>1</theta-max-deg>
			<phi-min-deg>-15</phi-min-deg>
			<phi-max-deg> 15</phi-max-deg>
			<speed-mps>
			  <expression>
			  <product>
				<property>sim/multiplay/generic/float[8]</property>
				<property>sim/multiplay/generic/float[14]</property>
				<value>1.4</value>
			  </product>
			  </expression>
				<spread>18</spread>
			</speed-mps>
			<rotation-speed>
				<x-min-deg-sec>0</x-min-deg-sec>
				<y-min-deg-sec>0</y-min-deg-sec>
				<z-min-deg-sec>0</z-min-deg-sec>
				<x-max-deg-sec>0</x-max-deg-sec>
				<y-max-deg-sec>0</y-max-deg-sec>
				<z-max-deg-sec>0</z-max-deg-sec>
			</rotation-speed>
		</shooter>
		<counter>
			<particles-per-sec>
				<value>40</value>
				<spread>3</spread>
			</particles-per-sec>
		</counter>
		<particle>
			<start>
				<color>
					<red><value>0.48</value></red>
					<green><value>0.48</value></green>
					<blue><value>0.50</value></blue>
					<alpha><value>0.05</value></alpha>
				</color>
				<size>
					<value>0.45</value>
				</size>
			</start>
			<end>
				<color>
					<red><value>0.48</value></red>
					<green><value>0.48</value></green>
					<blue><value>0.50</value></blue>
					<alpha><value>0</value></alpha>
				</color>
				<size>
					<value>7.0</value>
				</size>
			</end>
			<life-sec>
				<value>5</value>
			</life-sec>
			<mass-kg>0.5</mass-kg>
			<radius-m>0.05</radius-m>
		</particle>
		<program>
			<fluid>air</fluid>
			<gravity>false</gravity>
			<wind>true</wind>
		</program>
	</particlesystem>
</PropertyList>
