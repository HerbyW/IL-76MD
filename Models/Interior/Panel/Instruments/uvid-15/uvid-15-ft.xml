<!--Pressure digits-->
<animation>
  <type>rotate</type>
  <object-name>dig_p_ones</object-name>
  <property>instrumentation/altimeter/setting-inhg</property>
  <factor>3600</factor>
  <center>
    <x-m>-0.01257</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.02389</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>dig_p_dec</object-name>
  <expression>    
    <product>
      <difference>
        <mod>
          <property>instrumentation/altimeter/setting-inhgN</property>
          <value>1</value>
        </mod>
        <mod>
          <property>instrumentation/altimeter/setting-inhgN</property>
          <value>0.1</value>
        </mod>	
      </difference>
      <value>360</value>
    </product>    
  </expression>
  <center>
    <x-m>-0.01257</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.02389</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>dig_p_hund</object-name>
  <expression>
    <product>
      <difference>
        <mod>
          <property>instrumentation/altimeter/setting-inhg</property>
          <value>10</value>
        </mod>
        <mod>
          <property>instrumentation/altimeter/setting-inhg</property>
          <value>1</value>
        </mod>
      </difference>
      <value>36</value>
    </product>
  </expression>
  <center>
    <x-m>-0.01257</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.02389</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>dig_p_ths</object-name>
  <expression>
    <product>
      <difference>
        <mod>
          <property>instrumentation/altimeter/setting-inhg</property>
          <value>100</value>
        </mod>
        <mod>
          <property>instrumentation/altimeter/setting-inhg</property>
          <value>10</value>
        </mod>
      </difference>
      <value>3.6</value>
    </product>
  </expression>
  <center>
    <x-m>-0.01257</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.02389</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--Controls-->

<animation>
  <type>knob</type>
  <object-name>hs</object-name>
  <visible>false</visible>
  <action>
    <binding>
      <command>property-adjust</command>
      <property>instrumentation/altimeter/setting-inhg</property>
      <factor>0.01</factor>
      <min>28.10</min>
      <max>31.00</max>
    </binding>
  </action>
</animation>


</PropertyList>
