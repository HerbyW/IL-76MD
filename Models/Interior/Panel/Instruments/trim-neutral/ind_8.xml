<!-- indicators on central panel
3D instrument for Tu-154 -->

<PropertyList>

<path>ind_8.ac</path>

<!--External panel lighting-->

<animation>
  <type>material</type>
  <object-name>cover_1</object-name>
  <object-name>cover_2</object-name>
  <object-name>cover_3</object-name>
  <object-name>cover_4</object-name>
  <object-name>cover_5</object-name>
  <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
  </emission>
</animation>

<effect>
 <inherits-from>Effects/model-transparent</inherits-from>
  <object-name>cover_1</object-name>
  <object-name>cover_2</object-name>
  <object-name>cover_3</object-name>
  <object-name>cover_4</object-name>
  <object-name>cover_5</object-name>
</effect>


<!--Indicators-->

<animation>
  <type>material</type>
  <object-name>text_1</object-name>
  <condition>
    <and>
      <property>controls/switches/metar</property>
      <value>1</value>
      <greater-than>
	<property>controls/switches/gauge-light</property>
	<value>0</value>
      </greater-than>
    </and>
  </condition>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor>1</factor>
  </emission>
</animation>

<animation>
  <type>material</type>
  <object-name>text_2</object-name>
   <condition>
    <or>
     <less-than>
      <property>controls/flight/rudder-trim</property>
      <value>0</value>
     </less-than>
     <greater-than>
      <property>controls/flight/rudder-trim</property>
      <value>0</value>
     </greater-than>
    </or>
   </condition>
   <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </emission>
</animation>

<animation>
  <type>material</type>
  <object-name>text_3</object-name>
   <condition>
    <or>
     <less-than>
      <property>controls/flight/aileron-trim</property>
      <value>0</value>
     </less-than>
     <greater-than>
      <property>controls/flight/aileron-trim</property>
      <value>0</value>
     </greater-than>
    </or>
   </condition>
   <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </emission>
</animation>

<animation>
  <type>material</type>
  <object-name>text_4</object-name>
   <condition>
    <or>
     <less-than>
      <property>controls/flight/elevator-trim</property>
      <value>0</value>
     </less-than>
     <greater-than>
      <property>controls/flight/elevator-trim</property>
      <value>0</value>
     </greater-than>
    </or>
   </condition>
   <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </emission>
</animation>

