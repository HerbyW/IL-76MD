<!-- Altimeter UVID-15 feet
3D instrument for Tu-154 -->
<PropertyList>
 <path>uvid-15f3.ac</path>

 <animation>  
  <object-name>base</object-name>
  <object-name>dig_a_dec</object-name>
  <object-name>dig_a_hund</object-name>
  <object-name>dig_a_ths</object-name>
  <object-name>dig_a_decths</object-name>
  <object-name>dig_p_ones</object-name>
  <object-name>dig_p_dec</object-name>
  <object-name>dig_p_hund</object-name>
  <object-name>dig_p_ths</object-name>
  <object-name>needle</object-name>  
 </animation>

  <animation>
    <type>material</type>
    <object-name>base</object-name>
  <object-name>dig_a_dec</object-name>
  <object-name>dig_a_hund</object-name>
  <object-name>dig_a_ths</object-name>
  <object-name>dig_a_decths</object-name>
  <object-name>dig_p_ones</object-name>
  <object-name>dig_p_dec</object-name>
  <object-name>dig_p_hund</object-name>
  <object-name>dig_p_ths</object-name>
  <object-name>needle</object-name>  
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>
 
<!--Warning lamp-->
<animation>
  <type>material</type>
  <object-name>lamp</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>sim/signals/fdm-initialized</factor-prop>
  </emission>
</animation>

<animation>
  <type>select</type>
  <object-name>lamp</object-name>
  <condition>
    <and>
      <equals>
	<property>instrumentation/altimeter/setting-inhg</property>
	<value>29.92</value>
      </equals>
      <greater-than>
	<property>controls/switches/gauge-light</property>
	<value>0</value>
      </greater-than>
    </and>
  </condition>
</animation>
  
<!--Needles-->
<animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>instrumentation/altimeter/indicated-altitude-ft</property>
    <factor>0.36</factor>    
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<!--Altitude digits-->
<animation>
  <type>rotate</type>
  <object-name>dig_a_dec</object-name>  
  <property>instrumentation/altimeter/indicated-altitude-ft</property>
  <factor>3.6</factor>
  <center>
    <x-m>-0.01985</x-m>
    <y-m>0</y-m>
    <z-m>0.00511</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

