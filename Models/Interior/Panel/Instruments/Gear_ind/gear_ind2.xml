<PropertyList>
 <path>Gear_ind2.ac</path>

 <animation>
    <object-name>Mesh</object-name>
    <object-name>disk</object-name>
    <object-name>rect1</object-name>
    <object-name>rect2</object-name>    
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>disk</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>disk</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>/sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>disk</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>Mesh</object-name>
    <object-name>disk</object-name>
    <object-name>rect1</object-name>
    <object-name>rect2</object-name>
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>
  

<animation>
  <type>rotate</type>
  <object-name>rect2</object-name>
  <property>gear/gear/position-norm</property>
  <interpolation>
   <entry><ind>  0.0</ind><dep>    -120</dep></entry> 
   <entry><ind> 0.07</ind><dep>  -115</dep></entry>
   <entry><ind> 0.8</ind><dep>  -80</dep></entry>
   <entry><ind> 0.9</ind><dep>  -40</dep></entry>
   <entry><ind> 1</ind><dep>  0</dep></entry>
  </interpolation>
  <center>
   <x-m>0.0</x-m>
   <y-m>-0.023</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
 
 <animation>
  <type>rotate</type>
  <object-name>rect1</object-name>
  <property>gear/gear/position-norm</property>
  <interpolation>
   <entry><ind>  0.0</ind><dep>    -120</dep></entry> 
   <entry><ind> 0.07</ind><dep>  -115</dep></entry>
   <entry><ind> 0.8</ind><dep>  -80</dep></entry>
   <entry><ind> 0.9</ind><dep>  -40</dep></entry>
   <entry><ind> 1</ind><dep>  0</dep></entry>
  </interpolation>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.023</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
 
 </PropertyList>

